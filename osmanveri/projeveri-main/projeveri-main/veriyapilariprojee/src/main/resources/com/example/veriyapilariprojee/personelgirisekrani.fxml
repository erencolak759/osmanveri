<AnchorPane prefHeight="640" prefWidth="360" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.veriyapilariprojee.personelgirisekranicontroller">

   <!-- Üst mavi alan -->
   <VBox alignment="CENTER" prefHeight="250.0" style="-fx-background-color: linear-gradient(to bottom, #003366, #0055aa);" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Label text="WELCOME!" textFill="white">
         <font>
            <Font size="24" />
         </font>
      </Label>
      <ImageView fitHeight="114.0" fitWidth="123.0">
         <image>
            <Image url="@assets_task_01jvyt0s1regz842zm5m10x0f0_1748011916_img_0.png" />
         </image></ImageView>
   </VBox>

   <!-- Giriş alanı -->
   <VBox alignment="CENTER" spacing="15" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="270.0">
      <TextField fx:id="nameField" prefHeight="40" promptText="Username or Email" />
      <PasswordField fx:id="pswField" prefHeight="40" promptText="Password" />
      <Button fx:id="looginbutton" onAction="#getpersonelanaekran" prefWidth="100" style="-fx-background-color: #0055aa; -fx-text-fill: white;" text="LOG IN" />

      <Hyperlink fx:id="hyperlinkpsw" text="Forgot Password?" />
   </VBox>
   <Button fx:id="geriButton" layoutX="28.0" layoutY="30.0" onAction="#backtoilkgirisekrani" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 18;" text="← " />
   <Label fx:id="gerilabel" layoutX="60.0" layoutY="40.0" text="Geri" textFill="#faf8f8" underline="true" />

</AnchorPane>
