            </Label>
            <Button style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-background-radius: 10;" text="TRANSFER" />
        </VBox>
    </VBox>

    <!-- Alt Kısım: İşlem Butonları -->
    <VBox alignment="CENTER" layoutY="383.0" prefWidth="360" spacing="15">
        <Button prefHeight="40" prefWidth="260" style="-fx-background-color: #005A9C; -fx-text-fill: white; -fx-background-radius: 20;" text="Ödeme İşlemleri" />
    </VBox>
    <Label fx:id="gerilabel" layoutX="70.0" layoutY="50.0" text="Geri" textFill="#faf8f8" underline="true" />

</AnchorPane>